<h1>Tweet List Index</h1>
<% @tweets.each do |tweet| %>
  <div class="tweet_box">
    <div class="tweet_content"><%= tweet.tweet %></div>
    <button class="edit_button"><%= link_to 'edit',edit_tweet_path(tweet.id) %></button>
    <button class="delete"><%= link_to 'delete',tweet_path(tweet.id),method: :delete %></button>
  </div>
<% end %>

<%= link_to 'new tweet', new_tweet_path %>
